<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/addThreadView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="addThreadView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <Button
            android:id="@+id/hideThreadView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hideThreadView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/addThreadView"/>

        <Button
            android:id="@+id/removeThreadView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="removeThreadView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/hideThreadView"/>

        <TextView
            android:id="@+id/my_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="aaaa"
            app:layout_constraintStart_toStartOf="@id/addThreadView"
            app:layout_constraintTop_toBottomOf="@id/removeThreadView"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>